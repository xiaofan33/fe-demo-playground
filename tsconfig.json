{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*", "./demos/*"]
    },

    "noEmit": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
